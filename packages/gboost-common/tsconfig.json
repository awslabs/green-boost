{
  "extends": ["@tsconfig/strictest", "@tsconfig/esm", "@tsconfig/node18"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "lib",
    "skipLibCheck": true,
  },
  "exclude": ["lib"]
}
