{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "skipLibCheck": true,
  },
  "include": ["src/**/*"], // overwrites base config file so we cannot extend
  "exclude": ["**/*.test.ts", "lib"],
  "ts-node": {
    "esm": true,
  }
}
