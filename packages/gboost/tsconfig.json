{
  "extends": ["@tsconfig/strictest", "@tsconfig/node18"],
  "compilerOptions": {
    // don't need declaration map b/c end user is only running as cli
    "exactOptionalPropertyTypes": false,
    "incremental": true,
    "noEmit": true
  },
  "include": ["src/**/*", "tests/**/*", "scripts/**/*"],
  "exclude": ["templates/**/*", "examples/**/*"]
}
