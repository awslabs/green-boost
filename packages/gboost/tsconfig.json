{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "skipLibCheck": true,
  },
  "exclude": ["_templates/**/*", "templates/**/*", "**/*.test.ts", "lib", "tests"],
  "ts-node": {
    "esm": true,
  }
}
