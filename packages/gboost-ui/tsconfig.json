{
  "extends": ["@tsconfig/strictest", "@tsconfig/next"],
  "compilerOptions": {
    "checkJs": false, // remove once fixAmplify.js is removed
    // uncomment below once stitches code is removed!
    // https://github.com/stitchesjs/stitches/issues/1055
    // "declaration": true,
    // "declarationMap": true,
    "exactOptionalPropertyTypes": false,
    "noEmit": true,
    "incremental": true,
    "target": "ES2015" // allows for of loop
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "scripts/**/*"]
}
