    "@types/license-checker": "^25.0.3",
    "@types/node": "^16.11.27",
    "husky": "^7.0.4",
    "license-checker": "^25.0.1",
    "lint-staged": "^12.4.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "license": "Apache-2.0"
