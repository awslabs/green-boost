{
  "name": "gboost-monorepo",
  "private": "true",
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive --filter \"./packages/**\" --parallel build",
    "lint": "pnpm --recursive --filter \"./packages/**\" --parallel lint",
    "typecheck": "pnpm --recursive --filter \"./packages/**\" --parallel typecheck",
    "test": "pnpm --recursive --filter \"./packages/**\" --parallel test",
    "prepare": "husky install",
    "changeset-version": "ts-node scripts/changeset-version.ts",
    "license-check": "ts-node scripts/license-check.ts",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@types/license-checker": "^25.0.3",
    "@types/node": "^18.16.19",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "license": "Apache-2.0",
  "pnpm": {
    "auditConfig": {
      "ignoreCvs": []
    },
    "overrides": {
      "trim@<0.0.3": ">=0.0.3",
      "got@<11.8.5": ">=11.8.5",
      "minimatch@<3.0.5": ">=3.1.2",
      "loader-utils": ">=3.2.1",
      "terser": ">=5.14.2",
      "eta@<2.0.0": ">=2.0.0",
      "webpack@5": ">=5.76.0",
      "yaml@2": ">=2.2.2"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@aws-amplify/core",
        "@aws-amplify/geo",
        "react-native",
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx",
        "@algolia/client-search"
      ]
    }
  }
}