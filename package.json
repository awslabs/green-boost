{
  "name": "gboost-monorepo",
  "private": "true",
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive --filter \"./packages/**\" --parallel build",
    "lint": "pnpm --recursive --filter \"./packages/**\" --parallel lint",
    "typecheck": "pnpm --recursive --filter \"./packages/**\" --parallel typecheck",
    "unit-test": "pnpm --recursive --filter \"./packages/**\" --parallel test",
    "prepare": "husky install",
    "changeset-version": "ts-node --esm scripts/changeset-version.ts",
    "license-check": "ts-node --esm scripts/license-check.ts",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@types/license-checker": "^25.0.3",
    "@types/node": "^16.18.11",
    "husky": "^8.0.3",
    "license-checker": "^25.0.1",
    "lint-staged": "^13.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "license": "Apache-2.0",
  "pnpm": {
    "auditConfig": {
      "ignoreCvs": []
    },
    "overrides": {
      "trim@<0.0.3": ">=0.0.3",
      "got@<11.8.5": ">=11.8.5",
      "minimatch@<3.0.5": ">=3.1.2",
      "loader-utils": ">=3.2.1",
      "terser": ">=5.14.2"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@aws-amplify/core",
        "@aws-amplify/geo",
        "react-native",
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx",
        "@algolia/client-search"
      ]
    }
  }
}